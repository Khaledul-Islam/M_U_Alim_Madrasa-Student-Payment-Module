@model M_U_Alim_Madrasa.Models.Payment
@{
    ViewData["Title"] = "MakePayment";
}

<h2>Make Payment</h2>
<br />
<br />
@if (TempData["message"] != null)
{
    <div class="alert alert-info alert-dismissable" role="alert">
        <button class="close" aria-label="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["message"]
    </div>
}
<br />
<form method="post">
    <div style="border:1px dotted black; border-radius:10px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Total" />
        <input type="hidden" asp-for="Due" />

        <div class="row" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Roll"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Roll" />
                    </div>
                    <span asp-validation-for="Roll" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="TuitionFees"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="TuitionFees" />
                    </div>
                    <span asp-validation-for="TuitionFees" class="text-danger"></span>
                    <div class="col-sm-1">
                        <label asp-for="AdmissionFees"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="AdmissionFees" />
                    </div>
                    
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="HealthFees"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="HealthFees" />
                    </div>
                    
                    <div class="col-sm-1">
                        <label asp-for="SportsFees"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="SportsFees" />
                    </div>
                    
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="ExamFees"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="ExamFees" />
                    </div>
                   
                    <div class="col-sm-1">
                        <label asp-for="Others"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Others" />
                    </div>
                    
                </div>

            </div>
            
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="col-sm-4">
                        <input type="date" asp-for="Date" />
                    </div>
                    <span asp-validation-for="Date" class="text-danger"></span>

                    <div class="col-sm-1">
                        <label asp-for="Paid">Paid Amount</label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Paid" />
                    </div>
                    <span asp-validation-for="Paid" class="text-danger"></span>
                </div>
                  
            </div>
                    <div class="form-group">
                        <input type="submit" value="Make Payment" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-primary">Back To List</a>
                    </div>
                </div>
            </div>
</form>

@section scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

