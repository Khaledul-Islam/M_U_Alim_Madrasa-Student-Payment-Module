@model IEnumerable<M_U_Alim_Madrasa.Models.Students>
@{
    ViewData["Title"] = "Index";
}

<h2>Student List</h2>
<br />
<form asp-action="Index" method="get">
    <div class="form-group">
        <div class="col-sm-2">
            <input placeholder="Enter Roll" type="text" name="searchString">
        </div>
        <div class="col-sm-3">
            <input class="btn btn-primary btn-sm" type="submit" value="Search" />
        </div>
    </div>
</form>
<br />
<br />
<form method="post" asp-action="Index">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-info alert-dismissable" role="alert">
            <button class="close" aria-label="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
            </button>
            @TempData["message"]
        </div>
    }
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-striped">
            <tr>
                <th>@Html.DisplayNameFor(p => p.FirstOrDefault().Name)</th>
                <th>@Html.DisplayNameFor(p => p.FirstOrDefault().Roll)</th>
                <th>@Html.DisplayNameFor(p => p.FirstOrDefault().Class)</th>
                <th>@Html.DisplayNameFor(p => p.FirstOrDefault().Section)</th>
                <th>@Html.DisplayNameFor(p => p.FirstOrDefault().Mobile)</th>
                <th>@Html.DisplayNameFor(p => p.FirstOrDefault().Email)</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.Roll)</td>
                    <td>@Html.DisplayFor(m => item.Class)</td>
                    <td>@Html.DisplayFor(m => item.Section)</td>
                    <td>@Html.DisplayFor(m => item.Mobile)</td>
                    <td>@Html.DisplayFor(m => item.Email)</td>
                    <td>
                        <a class="btn btn-danger" asp-action="Payment">Payment</a>
                        <!-- <partial name="_PaymentPartial" model="@item.Roll" />-->
                    </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div>not available</div>
        }

    </form>
