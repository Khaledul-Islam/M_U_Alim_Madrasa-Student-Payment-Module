@model M_U_Alim_Madrasa.Models.Payment
@{
    ViewData["Title"] = "MakePayment";
}

<h2>Total Amount : <input style="max-width: 100px; text-align:center;" disabled asp-for="Total" /> </h2>
<h2>Your Due Amount : <input style="max-width: 100px; text-align:center;" disabled asp-for="Due" /> </h2>

<br />
<br />
@if (TempData["message"] != null)
{
    <div class="alert alert-info alert-dismissable" role="alert">
        <button class="close" aria-label="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["message"]
    </div>
}
<br />
<form method="post">
    <div style="border:1px dotted black; border-radius:10px;">
        <div class="row" style="padding:30px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Total" />
            <input type="hidden" asp-for="Due" />
            <input hidden asp-for="Roll" />
            <input hidden asp-for="TuitionFees" />
            <input hidden asp-for="AdmissionFees" />
            <input hidden asp-for="HealthFees" />
            <input hidden asp-for="SportsFees" />
            <input hidden asp-for="ExamFees" />
            <input hidden asp-for="Others" />

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="col-sm-4">
                        <input type="date" asp-for="Date" />
                    </div>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Paid">Paid Amount</label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Paid" />
                    </div>
                    <span asp-validation-for="Paid" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <input type="submit" value="Update Due" class="btn btn-primary" />
                <a asp-action="Invoice" class="btn btn-primary">Back To List</a>
            </div>
        </div>
    </div>

</form>

@section scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

